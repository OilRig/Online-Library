@model IEnumerable<OnlineLibrary.BLL.DTO.GenreDTO>

@{
    ViewBag.Title = "AllGenres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Категории</h2>

<p>
    @Html.ActionLink("Добавить категорию", "CreateGenre")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "EditGenre", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "DeleteGenre", new { id=item.Id })
        </td>
    </tr>
}

</table>
